---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Blog en Español';
const description = 'Todas las publicaciones en español';

const posts = (await getCollection('blog-es')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
).map(post => ({
	...post,
	slug: post.id.replace(/^\d{4}-\d{2}-\d{2}-/, '')
}));
---

<BaseLayout title={title} description={description}>
	<h1>Blog en Español</h1>
	<p>Todas las publicaciones en español. <a href="/blog/">View English posts →</a></p>

	{posts.length === 0 ? (
		<p><em>No hay publicaciones todavía. (No posts yet.)</em></p>
	) : (
		<table>
			<thead>
				<tr>
					<th>Fecha</th>
					<th>Título</th>
					<th>Descripción</th>
					<th>Link</th>
				</tr>
			</thead>
			<tbody>
				{posts.map((post) => (
					<tr>
						<td>{post.data.pubDate.toISOString().split('T')[0]}</td>
						<td><a href={`/es/${post.slug}/`}>{post.data.title}</a></td>
						<td>{post.data.description}</td>
						<td><a href={`/es/${post.slug}/`} class="btn">Leer →</a></td>
					</tr>
				))}
			</tbody>
		</table>
	)}
</BaseLayout>

<style>
	h1 {
		margin-bottom: 0.5rem;
	}

	p {
		margin-bottom: 1.5rem;
	}

	table td:nth-child(1) {
		width: 100px;
		white-space: nowrap;
		padding-right: 1rem !important;
	}

	table td:nth-child(2) {
		width: 30%;
	}

	table td:nth-child(2) a {
		color: var(--link-blue);
		text-decoration: underline;
	}

	table td:nth-child(2) a:visited {
		color: var(--link-blue);
	}

	table td:nth-child(4) {
		width: 1%;
		white-space: nowrap;
		padding-left: 0.5rem !important;
		padding-right: 0.15rem !important;
	}

	@media (max-width: 720px) {
		table td:nth-child(3) {
			display: none;
		}
	}
</style>
