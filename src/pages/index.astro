				<th>Date</th>
				<th>Title</th>
				<th>Link</th>
			</tr>
		</thead>
		<tbody>
			{blogPosts.map((post) => (
				<tr>
					<td class="date-col">{post.data.pubDate.toISOString().split('T')[0]}</td>
					<td class="title-col"><a href={`/${post.slug}/`}>{post.data.title}</a></td>
					<td class="link-col"><a href={`/${post.slug}/`} class="btn">Read →</a></td>
				</tr>
			))}
		</tbody>
	</table>

	{papers.length > 0 && (
		<>
			<h2>Publications</h2>
			<table>
				<thead>
					<tr>
						<th>Year</th>
						<th>Title</th>
						<th>Journal</th>
						<th>Link</th>
					</tr>
				</thead>
				<tbody>
					{papers.map((paper) => (
						<tr>
							<td class="year-col">{paper.data.refYear}</td>
							<td class="title-col"><a href={`/${paper.id}/`}>{paper.data.refTitle}</a></td>
							<td>{paper.data.refJournal}</td>
							<td class="link-col"><a href={`/${paper.id}/`} class="btn">Read →</a></td>
						</tr>
