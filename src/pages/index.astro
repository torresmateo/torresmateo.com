---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, GITHUB_URL, TWITTER_URL, BLOG_URL, BLUESKY_URL, LINKEDIN_URL, YOUTUBE_URL, INSTAGRAM_URL } from '../consts';

// Get all papers and sort by date (most recent first)
const papers = (await getCollection('papers')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get recent blog posts
const blogPosts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 10).map(post => ({
	...post,
	slug: post.id.replace(/^\d{4}-\d{2}-\d{2}-/, '')
}));
---

