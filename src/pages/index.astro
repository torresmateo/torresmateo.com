<style>
	h2 {
		margin-top: 2rem;
		margin-bottom: 1rem;
	}

	.table-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
		margin-bottom: 2rem;
	}

	.about-box {
		border: 1px solid var(--border-color);
		padding: 1rem;
		margin: 0;
	}

	.about-box p {
		margin: 0.75rem 0;
	}

	.about-box p:first-child {
		margin-top: 0;
	}

	.about-box p:last-child {
		margin-bottom: 0;
	}

	.info-table {
		margin: 0;
	}

	.info-table td:first-child {
		width: 30%;
	}

	/* Blog posts table column widths */
	.date-col {
		width: 70px;
		white-space: nowrap;
		padding-right: 1rem !important;
	}

	.year-col {
		width: 50px;
		white-space: nowrap;
		padding-right: 1rem !important;
	}

	.title-col a {
		color: var(--link-blue);
		text-decoration: underline;
	}

	.title-col a:visited {
		color: var(--link-blue);
	}

	.link-col {
		width: 1%;
		white-space: nowrap;
		padding-left: 0.5rem !important;
		padding-right: 0.15rem !important;
	}

	@media (max-width: 720px) {
		.table-row {
			grid-template-columns: 1fr;
		}

		table {
			font-size: 0.85rem;
		}

		table td:first-child {
			width: 40%;
		}
	}
</style>
